  <style>

  
    .loginfields {
      padding-top: 5%;
    }
    .logo_img {
      vertical-align: top;
    }

    @media only screen and (max-width: 768px) {

    h1 {
      font-size: 32px;
    }
    
    
    
    .loginbox {
      width: 100%;
      margin-top: 20%;
    }

    }

  </style>
  </head>
  
  <body style="background-color:#60D5DA;">
    <svg id="fader"></svg>
    <script>
      window.addEventListener('pageshow', function(event){
        // document.getElementById('fader').removeAttribute('class', 'fade-in');
        // document.getElementById('fader').setAttribute('class', 'fade-out');
        document.getElementById('fader').setAttribute('class', 'wipe-left');
      });
    </script>
    
    <div class='loginbox'>
      <div class='loginfields'>
      <% if (messageStatus == 2) { %>
        <p>An email has been sent to <br> <%= email %>.  <br> Please check your email to reset your password.</p> 
      <% } else { %> 
        <% if (messageStatus == 1) { %>
          <script>
            alert("Invalid Email.");
          </script> 
        <% } %> 
            <h1 class='logintext'>Forgot Your Password?</h1>
            <p style="padding: 2%;">Please enter your email address below and we'll send you a link to reset your password</p><br>

            <form method="POST" action="/forgot_password">
            <p>
                <input class="form-control" required type="email" name="username" id="username"
                placeholder="Email" ><br>
            </p>
            <input class="submit_button" type="submit" value="Submit">
            </form>
            
            <p style="text-align: center; padding-top:20px; padding-bottom:0%;">Back to <a href="/"> Login</a></p>
      <% } %> 
      </div>
    </div>
  </body>
  <script>

  </script>
