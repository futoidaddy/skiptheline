<body style="background-color:#60D5DA;">
    <form method="POST" action="/reset_password">
      <div class="container-fluid">
        <div class="header" style=" background-color: white;">
          <h1 style="color: #60D5DA; text-align:center; display:inline-block; margin-block-start:0em; margin-block-end: 0em;">SKIP THE LINE</h1>
          <img src="images/logo-teal.png" class="logo_img" style="width:75px;">
        </div>
        <!-- <main id="swup" class="transition-wipe"> -->
          <div class='loginbox'>
            <div class ='loginfields'>
              <h1 style="padding-top:5%;padding-bottom:2%;"> Reset Password</h1>              
              <!-- TEMPORARY; email link to forgot password page and grab user from there -->
              <div class="form-group" style="padding-bottom:10px">
                <label for="pwd">New Password</label>
                <input required type="password" class="form-control" id="pwd" name="pwd">
              </div> 
              
              <div class="form-group" style="padding-bottom:10px">
                <label for="pwd">Confirm New Password</label>
                <input required type="password" class="form-control" id="pwd2" name="pwd2">
              </div>
              
              <input class="submit_button" type="submit" value="Confirm" onclick="return validateform()"><br>
              <p>
                <br>
                Back to
                <a href="login.html" role="button">Login</a>
              </p>
            </div>
          </div>
          <!-- </main> -->
        </form>
        
        </div>
</body>

<script type="text/javascript">
  function validateform() {
    var pwd = document.getElementById("pwd").value;
    var pwd2 = document.getElementById("pwd2").value;
    if (pwd != pwd2) {
      alert("your passwords don't match!");
      return false;
    } 
  }
  
</script>

